<%- contentFor('style') %>
<style>
main {
    display: flex;
    min-height: calc(60vh - 320px); /* Reduced from 80vh */
}

.sidebar {
    width: 33.333%;
    padding: 2rem;
    position: fixed;
    height: calc(80vh - 120px); /* Reduced from 100vh */
}

.content {
    width: 66.666%;
    margin-left: 33.333%;
    padding: 2rem;
    overflow-y: auto;
    height: calc(80vh - 120px); /* Reduced from 100vh */
    border-left: 1px solid var(--eink-black);
}

    .progress-bar {
    width: 80%;
    height: 12px; /* Made thicker */
    background-color: #d8d1c6; /* Same as website background */
    margin: 1rem 0;
    border: 2px solid var(--eink-black); /* Added black outline */
    border-radius: 2px; /* Optional: slightly rounded corners */
    }

    .progress-fill {
    width: 12.50%; /* <-------------- BOOK PROGRESS BAR -------------> */
    height: 100%;
    background-color: var(--eink-black);
    }

    /* Right content area */
    .content {
        width: 66.666%;
        margin-left: 33.333%;
        padding: 2rem;
        overflow-y: auto;
    }

    .book-entry {
        display: flex;
        gap: 2rem;
        margin-bottom: 3rem;
        align-items: flex-start;
    }

    .book-cover {
        width: 200px;
        flex-shrink: 0;
    }

    .book-cover img {
        width: 100%;
        height: auto;
        display: block;
    }

    .book-info h2 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--eink-black);
    }

    .book-author {
        font-size: 1.1rem;
        color: var(--eink-mid-dark);
        margin-bottom: 1rem;
    }

    .book-review {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--eink-dark);
    }

    @media (max-width: 500px) {
        main {
            flex-direction: column;
        }

        .sidebar {
            position: static;
            width: 100%;
            height: auto;
            border-right: none;
            border-bottom: 1px solid var(--eink-black);
        }

        .content {
            width: 100%;
            margin-left: 0;
        }
    }
</style>

<%- contentFor('body') %>
<main>
    <div class="sidebar">
        <p><strong>Books I've Read</strong><br> 2025 Goal: 5/40</p>
        <div class="progress-bar">
            <div class="progress-fill"></div>
        </div>
    </div>

    <div class="content">

        <div class="book-entry">
            <div class="book-cover">
                <img src="/images/bookCovers/NotesFromUnderground.jpg" alt="Blink">
            </div>
            <div class="book-info">
                <div class="book-author">Fyodor Dostoevsky</div>
                <h2>Notes From Underground</h2>
                <p class="book-review">12/31/2024</p>
            </div>
        </div>

        <div class="book-entry">
            <div class="book-cover">
                <img src="/images/bookCovers/LetterstoAYoungPoet.jpg" alt="Blink">
            </div>
            <div class="book-info">
                <div class="book-author">Rainer Maria Rilke</div>
                <h2>Letters to a Young Poet</h2>
                <p class="book-review">12/25/2024</p>
            </div>
        </div>

        <div class="book-entry">
            <div class="book-cover">
                <img src="/images/bookCovers/BloodMeridian.jpg" alt="Blink">
            </div>
            <div class="book-info">
                <div class="book-author">Cormac McCarthy</div>
                <h2>Blood Meridian</h2>
                <p class="book-review">12/19/2024</p>
            </div>
        </div>

        <div class="book-entry">
            <div class="book-cover">
                <img src="/images/bookCovers/TheWorldsISee.jpg" alt="Blink">
            </div>
            <div class="book-info">
                <div class="book-author">Fei-Fei Li</div>
                <h2>The Worlds I see</h2>
                <p class="book-review">12/13/2024</p>
            </div>
        </div>

        <div class="book-entry">
            <div class="book-cover">
                <img src="/images/bookCovers/flowerForAlgernon.jpg" alt="Blink">
            </div>
            <div class="book-info">
                <div class="book-author">Daniel Keyes</div>
                <h2>Flowers for Algernon</h2>
                <p class="book-review">12/10/2024</p>
            </div>
        </div>
        <!-- Add more book entries as needed -->
    </div>
</main>