    <style>
        /* E-ink grayscale color variables */
        :root {
            --eink-black: #000000;
            --eink-darker: #222222;
            --eink-dark: #444444;
            --eink-mid-dark: #666666;
            --eink-medium: #888888;
            --eink-mid-light: #AAAAAA;
            --eink-light: #CBCBCB;
            --eink-white: #FFFFFF;
        }

        body {
            font-family: "Literata", "Charter", "Palatino", Georgia, serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #d8d1c6;
            color: var(--eink-black);
        }

        nav {
            padding: 1rem;
            margin: 0 2rem 2rem 2rem;
            border-bottom: 2px solid var(--eink-black);
        }

        nav a {
            margin-right: 2rem;
            color: var(--eink-black);
            text-decoration: none;
            font-size: 0.9rem;
        }

        nav a:hover {
            color: var(--eink-mid-dark);
        }

        main {
            padding: 0 2rem;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: var(--eink-black);
            text-align: left;
        }

        h2 {
            font-size: 1.25rem;
            margin-top: 2rem;
            color: var(--eink-darker);
            text-align: left;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
            text-align: left;
        }

        li {
            margin-bottom: 0rem;
        }

        a {
            color: var(--eink-darker);
            text-decoration: underline;
            text-decoration-thickness: 1px;
            text-underline-offset: 2px;
        }

        a:hover {
            color: var(--eink-black);
        }

        .social-links {
        margin: 2rem;  /* Change from margin-top to margin for consistent spacing */
        padding-top: 1rem;
        border-top: 1px solid var(--eink-black);
        text-align: left;
        }

        .social-links a {
            margin-right: 2rem;  /* Match nav link spacing */
            color: var(--eink-black);
            text-decoration: none;  /* Remove underline to match nav */
            font-size: 0.9rem;     /* Match nav font size */
        }

        .social-links a:hover {
            color: var(--eink-mid-dark);  /* Match nav hover effect */
        }

        @media (max-width: 600px) {
            main {
                padding: 0 1rem;
            }

            nav {
                padding: 1rem;
                margin: 0 1rem 1rem 1rem;
            }

            nav a {
                display: block;
                margin-bottom: 0.5rem;
            }
        }
    </style>
    <%- style %>
</head>
