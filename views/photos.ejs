<%- contentFor('style') %>
<style>
    main {
        background-color: #d8d1c6 !important;
        color: var(--eink-black) !important;
    }

    .photo-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(200px, auto);
        gap: 1rem;
        padding: 0rem;
        background-color: #d8d1c6;
    }

    .photo-item {
        position: relative;
        border-radius: 4px;
        overflow: hidden;
        transition: transform 0.3s ease;
        background-color: #d8d1c6;
    }

    .photo-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    /* Specific layout classes */
    .photo-item.wide {
        grid-column: span 2;
    }

    .photo-item.tall {
        grid-row: span 2;
    }

    .photo-item.large {
        grid-column: span 2;
        grid-row: span 2;
    }

    /* Hover effect */
    .photo-item:hover {
        transform: translateY(-5px);
    }

    h1 {
        color: var(--eink-black) !important;
        padding: 0 2rem;
    }

    @media (max-width: 768px) {
        .photo-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

